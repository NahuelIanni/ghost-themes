<div class="sidebar text-right meta">
    <div class="published animated fadeInUp">
        <strong>Published</strong>
        <time class="timeago" datetime="{{date format="YYYY-MM-DDTHH:mm:ssZ"}}" title="{{date format="MMMM D [']YY [at] H:mm"}}">{{date timeago="true"}}</time>
    </div>
    {{#if tags}}
        <span class="separator animated fadeInUp">//</span>
        <div class="tags animated fadeInUp">
            <strong>Tags</strong>
            {{tags separator=""}}
        </div>
    {{/if}}
</div>